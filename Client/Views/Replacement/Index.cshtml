
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layouts/Layout.cshtml";
}

<div class="d-flex justify-content-between">
    <h2>Replacement</h2>
    <button class="btn pull-right hidden-sm-down btn-success" id="BtnAdd" data-toggle="modal" data-target="#myModal"><i class="mdi mdi-plus-circle"></i> Create</button>
</div>

<div class="table-responsive m-t-40">
    <table id="Replacement" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>EmployeeName</th>
                <th>Replacement Reason</th>
                <th>Detail</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Add Department</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="Id">
                    </div>
                    <div class="form-group">
                        <label for="EmployeeOption">Employee Name :</label>
                        <div class="form-group">
                            <select class="form-control" id="EmployeeOption"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Address">Replacement Reason :</label>
                        <input class="form-control" id="ReplacementReason" placeholder="ReplacementReason">
                    </div>
                    <div class="form-group">
                        <label for="Name">Detail :</label>
                        <textarea type="text" class="form-control" id="Detail" placeholder="Detail"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="UpdateBtn" type="button" onclick="Edit()" class="btn btn-success">Update</button>
                    <button id="SaveBtn" type="button" onclick="Save()" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Script/Replacement.js"></script>
}